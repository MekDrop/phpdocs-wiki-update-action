{
  "name": "phpdocs-wiki-update-action",
  "version": "0.0.0",
  "description": "This action generate documentation for PHP project and updates wiki.",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:imponeer/phpdocs-wiki-update-action.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "all": "npm install && npm run build && npm run format && npm run lint && npm run pack"
  },
  "keywords": [
    "github actions",
    "phpdocs",
    "wiki",
    "php project",
    "documentation",
    "phpdoc-md"
  ],
  "author": "Imponeer",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.1.0",
    "@actions/github": "^1.1.0",
    "@types/fs-extra": "^8.0.1",
    "child_process": "^1.0.2",
    "flow-bin": "^0.118.0",
    "fs-extra": "^8.1.0",
    "picomatch": "^2.2.1",
    "recursive-readdir-sync": "^1.0.6"
  },
  "devDependencies": {
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.20.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^6.0.0",
    "eslint-plugin-github": "^2.0.0",
    "prettier": "^1.19.1",
    "semver": "^7.1.3",
    "typescript": "^3.7.5"
  }
}
